@page "/"
@rendermode InteractiveServer

@inject CobraStateContainer CobraStateContainer

@if (CobraStateContainer.currentUser != null)
{
	<Me/>
}
else
{
	<Welcome/>
}

@code {
	protected override void OnInitialized() =>
		CobraStateContainer.OnStateChange += StateHasChanged;
	

	public void Dispose() =>
		CobraStateContainer.OnStateChange -= StateHasChanged;

}
